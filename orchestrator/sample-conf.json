{
    "envoy_host": "http://envoy:9100",
    "failure_rate": [75],
    "concurrentUsers": [1, 10],
    "rounds": 5,
    "patterns": [
        {
            "name": "polly-retry",
            "platform": "dotnet",
            "lib": "polly",
            "url": "http://localhost:5000/retry",
            "config_template": {
                "count": 3,
                "sleepDurationType": "EXPONENTIAL_BACKOFF",
                "exponentialBackoffPow": 1.5,
                "sleepDuration": 50
            }
        },
        {
            "name": "resilience4j-retry",
            "platform": "java",
            "lib": "resilience4j",
            "url": "http://localhost:8080/retry",
            "config_template": {
                "maxAttempts": 3,
                "waitDuration": 50,
                "multiplier": 1.5,
                "intervalFunction": "EXPONENTIAL_BACKOFF",
                "initialIntervalMillis": 50
            }
        }
    ]
}